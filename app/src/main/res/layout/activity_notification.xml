<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/intro_background"
    android:orientation="vertical"
    tools:context="com.rdmns24.chamiapps.rdmns24live.Actvities.NotificationActivity">

    <ProgressBar
        android:id="@+id/pbProgressbarTrainline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:indeterminateTint="@android:color/holo_red_dark"></ProgressBar>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycleviewtrainList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/pbProgressbarTrainline"
        android:layout_above="@+id/adView"
        android:layout_marginTop="1dp">


    </android.support.v7.widget.RecyclerView>

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        android:layout_gravity="center"
        ads:adUnitId="ca-app-pub-8434077743160830/5117519645">
    </com.google.android.gms.ads.AdView>



</RelativeLayout>
